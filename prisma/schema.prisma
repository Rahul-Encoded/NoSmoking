generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String    @id @default(cuid())
  email              String    @unique
  username           String    @unique
  clerkId            String    @unique
  name               String?
  image              String?
  dob                DateTime? @db.Date
  costPerCigg        Float?
  initDailyAvg       Float?
  duration           Float?
  initLifeExpectancy Float?
  totalSmokes        Float?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  location           String?
  physicalActivity   String?
  jobHours           Float?
  dietQuality        String?
  eatingOutFrequency String?
  sleepQuality       String?

  //Relationships
  //1. Logs every failure instance
  smokeLogs    SmokeLogs[]
  //2. Tracks the real-time streak and accumulated bonus time
  nonSmokeLogs NonSmokeLogs[]
}

model SmokeLogs {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  timestamp DateTime @default(now())
}

model NonSmokeLogs {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  timestamp DateTime @default(now())
}
